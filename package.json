{
  "name": "shard",
  "version": "0.20.0",
  "description": "Shard community platform",
  "main": "index.js",
  "scripts": {
    "start": "SHARD_MAIL_VALIDATION=0 nodemon index.js",
    "production": "NODE_ENV=production node index.js",
    "db:start": "docker run -d -p 28015:28015 -p 8090:8080 -v $PWD/sharddb:/data --name sharddb rethinkdb",
    "db:rm": "docker stop sharddb && docker rm sharddb",
    "db:clear": "npm run db:rm && rm -r ./sharddb/"
  },
